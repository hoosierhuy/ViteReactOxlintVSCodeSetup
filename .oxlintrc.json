{
  "env": {
    "browser": true,
    "node": true,
    "es2024": true
  },
  "globals": {
    "React": "readonly"
  },
  "settings": {
    "jsx": {
      "pragma": "React",
      "fragment": "Fragment",
      "version": "detect"
    },
    "react": {
      "version": "detect"
    }
  },
  "plugins": ["react", "jsx-a11y", "import", "typescript"],
  "rules": {
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    "import/no-unassigned-import": "off"
  },
  "categories": {
    "correctness": "error",
    "suspicious": "warn"
  },
  "ignorePatterns": [
    "dist",
    "node_modules/**",
    "*.config.js",
    "*.config.ts",
    "*.config.mjs",
    "vite.config.*",
    "tsconfig*.json"
  ]
}
